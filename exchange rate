
Sub 抓資料()' 外匯資料
  On Error Resume Next
  Application.DisplayAlerts = False' 關閉警告訊息
   aaa1 = Array("", "國泰銀行", "華南銀行", "台灣銀行") '  要尋找的目標

          For I = 1 To 4  '如果之前有查詢銀行過先刪除前面sheets
           
              vvv = aaa1(I)
              For Each A In aaa1
             
                Worksheets(vvv).Delete
              Next A
          Next I
    
    If (Sheets.Count) <= 3 Then   '如果Sheets 小於3個 則增加三個
     
      For I = 1 To 3 Step 1
          Sheets.Add Before:=Sheets(1)
      Next I
        
    End If
        
抓資料1 '國泰世華外匯資料
抓資料2 '華南銀行外匯資料
抓資料3 '台灣銀行外匯資料

End Sub


副程式

Sub 抓資料1()  '  國泰世華格式從網路抓下來 格式沒什麼變 直接可用

Sheets(1).Select

    With ActiveSheet.QueryTables.Add(Connection:= _
        "URL;https://www.cathaybk.com.tw/cathaybk/personal_info07_accesskey.asp", _
        Destination:=Range("$A$1"))
        .Name = "personal_info07_accesskey"
        .FieldNames = True
        .RowNumbers = False
        .FillAdjacentFormulas = False
        .PreserveFormatting = True
        .RefreshOnFileOpen = False
        .BackgroundQuery = True
        .RefreshStyle = xlInsertDeleteCells
        .SavePassword = False
        .SaveData = True
        .AdjustColumnWidth = True
        .RefreshPeriod = 0
        .WebSelectionType = xlEntirePage
        .WebFormatting = xlWebFormattingNone
        .WebPreFormattedTextToColumns = True
        .WebConsecutiveDelimitersAsOne = True
        .WebSingleBlockTextImport = False
        .WebDisableDateRecognition = False
        .WebDisableRedirections = False
        .Refresh BackgroundQuery:=False
    End With


Rows("1:32").Delete
Range("a:b").Delete
Columns.EntireColumn.AutoFit
Sheets(1).Name = "國泰銀行"


End Sub

Sub 抓資料2()  '  台灣銀行 由於抓下來 格式都不相同必須重整

Sheets(2).Select
    With ActiveSheet.QueryTables.Add(Connection:= _
        "URL;http://rate.bot.com.tw/xrt?Lang=zh-TW", Destination:=Range("$A$1"))
        .Name = "xrt?Lang=zh-TW"
        .FieldNames = True
        .RowNumbers = False
        .FillAdjacentFormulas = False
        .PreserveFormatting = True
        .RefreshOnFileOpen = False
        .BackgroundQuery = True
        .RefreshStyle = xlInsertDeleteCells
        .SavePassword = False
        .SaveData = True
        .AdjustColumnWidth = True
        .RefreshPeriod = 0
        .WebSelectionType = xlEntirePage
        .WebFormatting = xlWebFormattingNone
        .WebPreFormattedTextToColumns = True
        .WebConsecutiveDelimitersAsOne = True
        .WebSingleBlockTextImport = False
        .WebDisableDateRecognition = False
        .WebDisableRedirections = False
        .Refresh BackgroundQuery:=False
    End With

Rows("1:15").Delete  ' 刪除後面不需要欄位

For I = 2 To 19 Step 1      '根據排列邏輯，先刪除每個貨幣中列 每個貨幣中間不需要的欄位
    For y = 1 To 3
   
   Rows(I).Delete

   Next y
Next I

Rows("20:30").Delete         ' 後面用不到欄位刪除
Sheets(2).Name = "台灣銀行"

Rows(1).Insert

Cells(1, 2) = "現金-本行買入"
Cells(1, 3) = "現金-本行賣出"
Cells(1, 4) = "即期-本行買入"
Cells(1, 5) = "即期-本行賣出"

Range("f:k").Delete

      '這邊把每個貨幣名弄進來
     aaa1 = Array("", "", "美金", "港幣", "英鎊", "澳幣", "加拿大", "新加坡幣", "瑞士法郎", "日幣", "南非幣", "瑞典幣", "紐元", "泰幣", "菲國比索", "印尼幣", "歐元", "韓元", "越南盾", "馬來幣", "人民幣") ' 要變目標

          For I = 2 To 20
            vvv = aaa1(I)
            Cells(I, 1) = vvv
          Next I

Columns.EntireColumn.AutoFit  
End Sub

Sub 抓資料3() ' 抓下來 格式不須處理 直接可以使用

Sheets(3).Select
 
        
        With ActiveSheet.QueryTables.Add(Connection:= _
        "URL;https://ibank.hncb.com.tw/netbank/pages/jsp/ExtSel/RTExange.html", _
        Destination:=Range("$A$1"))
        .Name = "RTExange"
        .FieldNames = True
        .RowNumbers = False
        .FillAdjacentFormulas = False
        .PreserveFormatting = True
        .RefreshOnFileOpen = False
        .BackgroundQuery = True
        .RefreshStyle = xlInsertDeleteCells
        .SavePassword = False
        .SaveData = True
        .AdjustColumnWidth = True
        .RefreshPeriod = 0
        .WebSelectionType = xlSpecifiedTables
        .WebFormatting = xlWebFormattingNone
        .WebTables = "4"
        .WebPreFormattedTextToColumns = True
        .WebConsecutiveDelimitersAsOne = True
        .WebSingleBlockTextImport = False
        .WebDisableDateRecognition = False
        .WebDisableRedirections = False
        .Refresh BackgroundQuery:=False
          

     End With

Sheets(3).Name = "華南銀行"

End Sub
